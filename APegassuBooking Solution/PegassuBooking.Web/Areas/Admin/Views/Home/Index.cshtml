@using PegassusBooking.Utilities
@model Areas_Admin_Views_Home_Index
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Assuming you have a shared layout for the admin area
}

<h2>Welcome to the Admin Dashboard</h2>

<div class="card-deck">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Manage Contacts</h3>
            <p class="card-text">
                <a asp-area="Admin" asp-controller="Contacts" asp-action="Index" class="btn btn-primary">View Contacts</a>
            </p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Manage Hospitals</h3>
            <p class="card-text">
                <a asp-area="Admin" asp-controller="Hospitals" asp-action="Index" class="btn btn-primary">View Hospitals</a>
            </p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Manage Rooms</h3>
            <p class="card-text">
                <a asp-area="Admin" asp-controller="Rooms" asp-action="Index" class="btn btn-primary">View Rooms</a>
            </p>
        </div>
    </div>
</div>

<div class="mt-4">
    <h3>Admin Actions</h3>
    <p>
        <a asp-area="Admin" asp-controller="Admin" asp-action="RegisterAdmin" class="btn btn-success">Register New Admin</a>
    </p>
</div>
