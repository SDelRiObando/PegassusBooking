@using PegassusBooking.Utilities
@model PagedResult<PegassusBooking.View.AppointmentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DoctorsLayout.cshtml";
}

<h2>Doctor's Appointments</h2>
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Number
                </th>
                <th>
                    Appointment Date
                </th>
                <th>
                    Duration
                </th>
                <th>
                    Type
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ScheduledDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
        <p>
            <a asp-action="Create">Create New Appointment</a>
        </p>
    </table>
}
else
{
    <p>No appointments found for this doctor.</p>
}
