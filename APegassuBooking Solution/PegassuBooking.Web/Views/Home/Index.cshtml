@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="jumbotron text-center mt-5">
        <h1 class="display-4">Welcome to Pegassus Booking</h1>
        <p class="lead">Providing Quality Healthcare Services</p>
        <hr class="my-4">
        <p>Explore our services, find a doctor, and book your appointments online.</p>
        <a class="btn btn-primary btn-lg" href="#" role="button">Learn More</a>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Find a Doctor</h5>
                    <p class="card-text">Search and discover experienced doctors in various specialties.</p>
                    <a href="#" class="btn btn-primary">Explore Doctors</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Book an Appointment</h5>
                    <p class="card-text">Schedule appointments with your preferred doctors conveniently online.</p>
                    <a href="#" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Our Services</h5>
                    <p class="card-text">Discover a range of healthcare services tailored to your needs.</p>
                    <a href="#" class="btn btn-primary">View Services</a>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <p class="lead">Experience compassionate and quality healthcare.</p>
    </div>
</div>